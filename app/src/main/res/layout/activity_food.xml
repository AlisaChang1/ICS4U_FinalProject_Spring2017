<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_food"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisa.quickcare.FoodActivity">

    <Button
        android:text="Rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFood3"
        android:layout_alignBaseline="@+id/buttonFood2"
        android:layout_alignBottom="@+id/buttonFood2"
        android:layout_toLeftOf="@+id/buttonFood4"
        android:layout_toStartOf="@+id/buttonFood4" />

    <Button
        android:text="Chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:id="@+id/buttonFood1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFood4"
        android:layout_alignBaseline="@+id/buttonFood3"
        android:layout_alignBottom="@+id/buttonFood3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Carrots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFood2"
        android:layout_alignBaseline="@+id/buttonFood1"
        android:layout_alignBottom="@+id/buttonFood1"
        android:layout_toRightOf="@+id/buttonFood1"
        android:layout_toEndOf="@+id/buttonFood1" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:id="@+id/buttonBack3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/chicken"
        android:layout_above="@+id/buttonFood1"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/buttonBack3"
        android:layout_toLeftOf="@+id/buttonFood2"
        android:layout_marginTop="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/carrots"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/buttonBack3"
        android:layout_alignStart="@+id/buttonBack3"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_toStartOf="@+id/buttonFood4"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp"
        android:layout_toLeftOf="@+id/buttonFood4"
        android:layout_alignBottom="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/rice"
        android:id="@+id/imageView7"
        android:layout_below="@+id/buttonBack3"
        android:layout_marginTop="248dp"
        android:layout_toRightOf="@+id/buttonFood2"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/buttonFood3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/cake"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />
</RelativeLayout>
